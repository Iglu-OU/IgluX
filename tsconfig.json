{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["es6", "es7", "dom"],
        "jsx": "react",
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "removeComments": false
    },
    "include": ["src/**/*", "custom.d.ts"],
    "exclude": ["node_modules"],
    "files": ["custom.d.ts"],
    "compileOnSave": false
}
